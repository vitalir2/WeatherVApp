<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherForecastFragment">

    <fragment
        android:id="@+id/weatherForecastFragment"
        android:name="io.github.vitalir2.weathervapp.ui.fragments.WeatherForecastFragment"
        android:label="fragment_weather_forecast"
        tools:layout="@layout/fragment_weather_forecast" >
        <action
            android:id="@+id/action_weatherForecastFragment_to_searchWeatherFragment"
            app:destination="@id/searchWeatherFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchWeatherFragment"
        android:name="io.github.vitalir2.weathervapp.ui.fragments.SearchWeatherFragment"
        android:label="fragment_search_city"
        tools:layout="@layout/fragment_search_city" />
    <fragment
        android:id="@+id/savedCitiesFragment"
        android:name="io.github.vitalir2.weathervapp.ui.fragments.SavedCitiesFragment"
        android:label="fragment_saved_citites"
        tools:layout="@layout/fragment_saved_citites" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="io.github.vitalir2.weathervapp.ui.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>